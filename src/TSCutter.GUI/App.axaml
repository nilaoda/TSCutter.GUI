<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TSCutter.GUI.App"
             xmlns:local="using:TSCutter.GUI"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             Name="TSCutter.GUI"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <StyleInclude Source="avares://TSCutterGUI/Icons.axaml" />
        <styling:FluentAvaloniaTheme PreferSystemTheme="True" PreferUserAccentColor="True" />
        <!--<Style Selector="Button /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>-->
        <!-- DataGrid紧凑布局 -->
        <Style Selector="DataGrid">
            <Setter Property="RowHeight" Value="28"/>
        </Style>
        <Style Selector="DataGridRow">
            <Setter Property="Height" Value="28"/>
            <Setter Property="MinHeight" Value="28"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style Selector="DataGridCell">
            <Setter Property="Padding" Value="4"/>
        </Style>
        <Style Selector="DataGridCell Rectangle">
            <Setter Property="IsVisible" Value="False"/>
        </Style>
    </Application.Styles>
</Application>